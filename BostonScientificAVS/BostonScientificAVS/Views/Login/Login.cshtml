<style>
 
    #loginerror{
        text-align:center;
    }
    .logo-image{
        width: 353px;
        height: 71px;
        margin: auto;
    }

    .app-name-text{
        font-size:41px;
        font-weight: 700;
        text-align: center;
    }

    .login-button{
        display: block;
        width: 206px;
        height: 67px;
        background: #003C71;
        padding: 10px;
        text-align: center;
        border-radius: 12px;
        color: white;
        font-weight: bold;
        line-height: 40px;
        margin:auto;
        text-decoration:none;
    }



    .login-text{
        font-size:24px;
        font-weight:500;
    }

    .login-error-text{
        font-size:24px;
        font-weight:500;
        color: orange;
    }

    .login-container{
        position: relative;
        top: 30%;
        display: flex;
        flex-direction: column;
        gap: 22px;
    }

    .error-mockup{
        position: relative;
        top: 50%;
    }

    .login-div{
        display: flex;
        justify-content: center;
        gap: 5px;
    }

</style>

<script>
    function submitLoginForm() {
        console.log("submit hit");
        document.getElementById("loginForm").submit();
        showLoader();
    }

    // Function to show the loader and overlay
function showLoader() {
  document.getElementById('loader').style.display = 'block';
  document.getElementById('overlay').style.display = 'block';
}

// Function to hide the loader and overlay
function hideLoader() {
  document.getElementById('loader').style.display = 'none';
  document.getElementById('overlay').style.display = 'none';
}

</script>

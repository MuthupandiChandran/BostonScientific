@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Home Page";
}

<div class="login-container">
    <div>
        <div class="logo-image">
            <img src="~/assets/images/AbeTechLogo.png" class="image-size-default" />
        </div>
    </div>
    <div>
        <h6 class="app-name-text">Auto Verify System</h6>
    </div>
    <div>
        <a class="login-button" asp-area="" asp-controller="Home" asp-action="HomeScreen"><span class="login-text">Scan ID/Login</span></a>
    </div>
</div>

<div class="error-mockup">
    <a class="login-error-button" asp-area="" asp-controller="Home" asp-action="LoginError"><span class="login-error-text">For Error Scenario</span></a>
</div>

<div class="container">
    <a asp-area="" asp-controller="Home" asp-action="Users" class="btn btn-outline-primary me-2 bottom-left-button">Admin Login</a>
</div>



